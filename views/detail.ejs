<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> - Full Article</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
    />
  </head>
  <body class="bg-gray-50 text-gray-800 font-sans">
        <%- include('./includes/navbar.ejs'), {isLoggedIn: isLoggedIn}%>

    <div class="container mx-auto my-8 p-6 max-w-4xl bg-white shadow-lg rounded-lg">
      <!-- Article Title -->
      <h1 class="text-3xl font-bold text-center mb-4 text-blue-600">
      </h1>

      <!-- Article Image -->
        <div class="flex justify-center mb-6">
          <img
            src="https://picsum.photos/200/300"
            alt=""
            class="max-h-80 rounded-lg shadow-md"
          />
        </div>

      <!-- Article Type -->
      <p class="text-sm text-gray-500 text-center mb-6 italic">
      </p>

      <!-- Full Article Content -->
      <div class="mt-4 text-lg text-gray-700 leading-relaxed">
        <p></p>
      </div>

      <!-- Like and Comment Section -->
      <div class="flex justify-between items-center mt-8 mb-4 border-t pt-4">
        <!-- Like Button -->
        <div class="flex items-center space-x-2">
          <form action="/detail" method="POST">
            <button
              type="submit"
              class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition"
            >
              <i class="bi bi-hand-thumbs-up"></i> Like
            </button>
          </form>
          <span class="text-gray-600"> Likes</span>
        </div>

        <!-- Comments Count -->
        <div class="text-gray-600">
          <span> Comments</span>
        </div>
      </div>

      <!-- Comments Section -->
      <div class="border-t pt-4">
        <h3 class="text-xl font-semibold mb-4 text-gray-800">Comments</h3>

        <!-- Display Comments -->
          <div class="mb-4">
            <p class="text-gray-700 font-semibold"> comment.user</p>
            <p class="text-gray-600">comment.text </p>
            <p class="text-xs text-gray-400">new Date(comment.date).toLocaleString() </p>
          </div>

        <!-- Add New Comment Form -->
        <div class="mt-6">
          <form action="/add-comment/" method="POST">
            <textarea
              name="commentText"
              rows="3"
              class="w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
              placeholder="Leave a comment..."
              required
            ></textarea>
            <button
              type="submit"
              class="mt-2 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition"
            >
              Post Comment
            </button>
          </form>
        </div>
      </div>

      <!-- Back Button -->
      <div class="flex justify-center mt-8">
        <a
          href="/"
          class="bg-gray-300 text-gray-800 rounded-md px-6 py-2 hover:bg-gray-400 transition text-center"
        >
          Back to Articles
        </a>
      </div>
    </div>
  </body>
</html>
